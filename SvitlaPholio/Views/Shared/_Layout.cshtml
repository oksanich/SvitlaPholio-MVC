<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="shortcut icon" type="image/png" href="@Url.Content("~/Content/images/favicon.ico")"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/main.css")"/>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]>
    <script type="text/javascript" src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title>Home</title>
</head>
<body>

<div class="wrapper">
    <header class="mainHeader">
        <div class="row">
            <div class="header">
                <a class="logo" href="/"><img src="@Url.Content("~/Content/images/design/logoHeader.png")" alt="SvitlaPholio"/></a>
                <div class="mobileMenu cf">
                    <div class="sandwichOpen _sandwichOpen">
                        <div class="swTopper"></div>
                        <div class="swBottom"></div>
                        <div class="swFooter"></div>
                    </div>
                </div>
                <div class="textCenter">
                    <div class="wrapHeaderNav">
                        <nav class="headerNav">
                            <ul class="headerNavList">
                                <li class="headerNavItem">@Html.ActionLink("Home", "Index", "Index", new { @class = "headerNavLink", @title = "HOME"})</li>
                                <li class="headerNavItem">@Html.ActionLink("Portfolio", "Portfolio", "Index", new { @class = "headerNavLink", @title = "PORTFOLIO"})</li>
                                <li class="headerNavItem">@Html.ActionLink("Team", "Team", "Index", new { @class = "headerNavLink", @title = "TEAM"})</li>
                                <li class="headerNavItem">@Html.ActionLink("Contact", "Contact", "Index", new { @class = "headerNavLink", @title = "CONTACT"})</li>
                            </ul>
                        </nav>
                        <div class="socialHeader">
                            <ul class="socialHeaderList">
                                <li class="socialHeaderItem"><a href="#" class="socialHeaderLink icon-facebook"></a></li>
                                <li class="socialHeaderItem"><a href="#" class="socialHeaderLink icon-twitter"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="mainContent">
        <div class="container">

            @RenderBody()

        </div>
    </div>

    <footer class="mainFooter">
        <div class="container">
            <div class="footer">
                <div class="row textCenter">
                    <a class="footerLogo" href="/">
                        <img src="@Url.Content("~/Content/images/design/logoFooter.png")" alt="SvitlaPholio"/>
                    </a>
                    <div class="footerNav">
                        <ul class="footerNavList">
                            <li class="footerNavItem">@Html.ActionLink("Home", "Index", "Index", new { @class = "footerNavLink"})</li>
                            <li class="footerNavItem">@Html.ActionLink("Portfolio", "Portfolio", "Index", new { @class = "footerNavLink"})</li>
                            <li class="footerNavItem">@Html.ActionLink("Team", "Team", "Index", new { @class = "footerNavLink"})</li>
                            <li class="footerNavItem">@Html.ActionLink("Contact", "Contact", "Index", new { @class = "footerNavLink"})</li>
                        </ul>
                    </div>
                    <div class="aboutSite">
                        <p class="aboutSiteText">Creative digital agency for sleek and sophisticated solutions for mobile, websites and software designs, lead by passionate and uber progressive team that lives and breathes design. Creative digital agency for sleek and sophisticated solutions for mobile, websites and software designs.</p>
                    </div>
                    <div class="socialFooter">
                        <ul class="socialFooterList">
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-facebook"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-twitter"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-vimeo"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-tumblr"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-google"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-GitHub-circle"></a></li>
                            <li class="socialFooterItem"><a href="#" class="socialFooterLink icon-Linked-in"></a></li>
                        </ul>
                    </div>
                    <div class="copyright">Copyright &copy; 2015 Svitla Systems. All Rights Reserved.</div>
                </div>
            </div>
        </div>
    </footer>
</div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/js/plugins/easyPieChart.js")"></script>
<script src="@Url.Content("~/Scripts/js/main.js")"></script>

</body>
</html>
